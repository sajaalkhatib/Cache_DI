@model Dictionary<string, object>

@{
    ViewData["Title"] = "عرض محتويات الكاش";
}

<div class="container mt-5">
    <h2 class="text-primary">🔍 محتويات الكاش</h2>

    <div class="card mt-4">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0">📋 العناصر المخزنة في الكاش</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                foreach (var item in Model)
                {
                    <div class="mb-4 p-3 border rounded">
                        <h6 class="text-success">🔑 المفتاح: <code>@item.Key</code></h6>
                        <div class="mt-2">
                            <strong>📦 القيمة:</strong>
                            <ul class="list-group mt-2">
                                @if (item.Value is List<string> stringList)
                                {
                                    @foreach (var listItem in stringList)
                                    {
                                        <li class="list-group-item">@listItem</li>
                                    }
                                }
                                else
                                {
                                    <li class="list-group-item">@item.Value</li>
                                }
                            </ul>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="alert alert-warning">
                    ⚠️ لا توجد عناصر في الكاش حالياً
                </div>
            }
        </div>
    </div>

    <div class="mt-3">
        <h6>🔑 المفاتيح الموجودة:</h6>
        @if (ViewBag.CacheKeys != null && ViewBag.CacheKeys.Count > 0)
        {
            <div class="d-flex flex-wrap gap-2">
                @foreach (var key in ViewBag.CacheKeys)
                {
                    <span class="badge bg-success">@key</span>
                }
            </div>
        }
        else
        {
            <p class="text-muted">لا توجد مفاتيح في الكاش</p>
        }
    </div>

    <div class="mt-4">
        <a href="@Url.Action("Index")" class="btn btn-primary">← العودة للقائمة</a>
        <button onclick="location.reload()" class="btn btn-secondary">🔄 تحديث الصفحة</button>
        <a href="@Url.Action("ClearCache")" class="btn btn-warning">🗑️ مسح الكاش</a>
    </div>
</div>