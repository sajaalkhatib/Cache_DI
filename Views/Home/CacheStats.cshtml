@model (int hits, int misses)

@{
    ViewData["Title"] = "إحصائيات الكاش";
    double totalRequests = Model.hits + Model.misses;
    double hitPercentage = totalRequests > 0 ? (Model.hits / totalRequests) * 100 : 0;
    double missPercentage = totalRequests > 0 ? (Model.misses / totalRequests) * 100 : 0;
}

<div class="container mt-4">
    <h2 class="text-primary mb-4"><i class="bi bi-graph-up"></i> إحصائيات الكاش</h2>

    <div class="row">
        <div class="col-md-6">
            <div class="card text-white bg-success mb-3">
                <div class="card-body text-center">
                    <h3 class="card-title">@Model.hits</h3>
                    <p class="card-text">✅ Cache Hits</p>
                    <small>مرات جلب البيانات من الكاش</small>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card text-white bg-warning mb-3">
                <div class="card-body text-center">
                    <h3 class="card-title">@Model.misses</h3>
                    <p class="card-text">🔄 Cache Misses</p>
                    <small>مرات تخزين البيانات في الكاش</small>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0"><i class="bi bi-percent"></i> النسب المئوية</h5>
        </div>
        <div class="card-body">
            <div class="mb-3">
                <div class="d-flex justify-content-between mb-1">
                    <span>✅ نجاح الكاش</span>
                    <span>@hitPercentage.ToString("0.00")%</span>
                </div>
                <div class="progress" style="height: 25px;">
                    <div class="progress-bar bg-success" style="width: @hitPercentage%">
                        @hitPercentage.ToString("0.00")%
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <div class="d-flex justify-content-between mb-1">
                    <span>🔄 فشل الكاش</span>
                    <span>@missPercentage.ToString("0.00")%</span>
                </div>
                <div class="progress" style="height: 25px;">
                    <div class="progress-bar bg-warning" style="width: @missPercentage%">
                        @missPercentage.ToString("0.00")%
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a href="@Url.Action("Index")" class="btn btn-primary">
            <i class="bi bi-arrow-left"></i> العودة للرئيسية
        </a>
        <a href="@Url.Action("ClearCache")" class="btn btn-danger">
            <i class="bi bi-trash"></i> مسح الكاش والإحصائيات
        </a>
    </div>
</div>