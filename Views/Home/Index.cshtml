@model List<string>

@{
    ViewData["Title"] = "تجربة تخزين البيانات في الذاكرة";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="alert alert-info">
                <h4 class="alert-heading"><i class="bi bi-info-circle"></i> كيف يعمل الكاش؟</h4>
                <p class="mb-0">البيانات بتتخزن في <strong>الذاكرة العشوائية (RAM)</strong> للتطبيق. أول طلب بتكون <span class="text-success">CACHE MISS</span> والطلبات الجاية بتكون <span class="text-primary">CACHE HIT</span>.</p>
            </div>
        </div>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-people"></i> قائمة المستخدمين</h5>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <ul class="list-group">
                            @foreach (var user in Model)
                            {
                                <li class="list-group-item d-flex align-items-center">
                                    <i class="bi bi-person-circle me-2 text-primary"></i>
                                    <span class="fw-medium">@user</span>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted"><i class="bi bi-exclamation-triangle"></i> لا توجد بيانات</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="bi bi-tools"></i> أدوات التحكم</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("TestConsole")" class="btn btn-success btn-lg">
                            <i class="bi bi-terminal"></i> 🧪 اختبار الكونسول
                        </a>
                        <a href="@Url.Action("ViewCache")" class="btn btn-primary">
                            <i class="bi bi-search"></i> 🔍 عرض محتويات الكاش
                        </a>
                        <a href="@Url.Action("CacheStats")" class="btn btn-info">
                            <i class="bi bi-graph-up"></i> 📈 إحصائيات الكاش
                        </a>
                        <a href="@Url.Action("ClearCache")" class="btn btn-danger">
                            <i class="bi bi-trash"></i> 🗑️ مسح الكاش
                        </a>
                        <button onclick="location.reload()" class="btn btn-secondary">
                            <i class="bi bi-arrow-clockwise"></i> 🔄 تحديث الصفحة
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0"><i class="bi bi-question-circle"></i> كيف تشوف النتائج؟</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6>في Visual Studio:</h6>
                            <ol>
                                <li>افتح <strong>View → Terminal</strong></li>
                                <li>أو <strong>View → Output</strong> → اختر <strong>Console</strong></li>
                                <li>استخدم الأزرار أعلاه وشاهد الرسائل</li>
                            </ol>
                        </div>
                        <div class="col-md-6">
                            <h6>النتائج المتوقعة:</h6>
                            <ul>
                                <li>🟢 <strong>CACHE MISS</strong> - أول مرة</li>
                                <li>🔵 <strong>CACHE HIT</strong> - مرات لاحقة</li>
                                <li>🟡 <strong>CACHE CLEARED</strong> - بعد المسح</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>