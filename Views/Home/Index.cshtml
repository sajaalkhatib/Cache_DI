@model List<string>

@{
    ViewData["Title"] = "Users from Cache";
}

<div class="container mt-5">
    <h2 class="text-primary">📊 Users from Cache</h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show mt-3" role="alert">
            @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card mt-4">
        <div class="card-header bg-light">
            <h5 class="mb-0">👥 قائمة المستخدمين</h5>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <ul class="list-group">
                    @foreach (var user in Model)
                    {
                        <li class="list-group-item">
                            <i class="bi bi-person-circle"></i> @user
                        </li>
                    }
                </ul>
            }
            else
            {
                <p class="text-muted">لا توجد بيانات</p>
            }
        </div>
    </div>

    <!-- أزرار التحكم بالكاش -->
    <div class="card mt-4">
        <div class="card-header bg-warning text-dark">
            <h5 class="mb-0">🔧 أدوات فحص واختبار الكاش</h5>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-4">
                    <a href="@Url.Action("TestCache")" class="btn btn-success w-100">
                        🧪 اختبار الكاش
                    </a>
                    <small class="text-muted d-block mt-1">جلب البيانات عدة مرات</small>
                </div>
                <div class="col-md-4">
                    <a href="@Url.Action("ViewCache")" class="btn btn-primary w-100">
                        🔍 عرض الكاش
                    </a>
                    <small class="text-muted d-block mt-1">مشاهدة المحتويات</small>
                </div>
                <div class="col-md-4">
                    <a href="@Url.Action("CacheStats")" class="btn btn-info w-100">
                        📈 إحصائيات
                    </a>
                    <small class="text-muted d-block mt-1">Hits & Misses</small>
                </div>
                <div class="col-md-6">
                    <a href="@Url.Action("ClearCache")" class="btn btn-danger w-100">
                        🗑️ مسح الكاش
                    </a>
                    <small class="text-muted d-block mt-1">حذف البيانات المخزنة</small>
                </div>
                <div class="col-md-6">
                    <button onclick="location.reload()" class="btn btn-secondary w-100">
                        🔄 تحديث الصفحة
                    </button>
                    <small class="text-muted d-block mt-1">جلب البيانات مرة أخرى</small>
                </div>
            </div>
        </div>
    </div>

    <!-- تعليمات -->
    <div class="alert alert-dark mt-4">
        <h6>📋 كيف تشوف النتائج:</h6>
        <ol class="mb-0">
            <li>افتح <strong>Terminal/Console</strong> في Visual Studio</li>
            <li>استخدم أزرار الاختبار أعلاه</li>
            <li>شاهد الرسائل الملونة في الـ Console</li>
            <li>النتيجة: 🟢 = تخزين جديد، 🔵 = جلب من الكاش</li>
        </ol>
    </div>
</div>